<?xml version="1.0" encoding="UTF-8"?>
<project>
  <name>DATdemo</name>
  <version>1.0.0</version>
  <platform>cd</platform>
  <makefile>..\Makefile</makefile>
  <neocorePath>..\..</neocorePath>
  <buildPath>{{neocore}}\build</buildPath>
  <distPath>{{neocore}}\dist</distPath>
  <gfx>
    <DAT>
      <chardata>
        <setup>
          <starting_tile>256</starting_tile>
          <charfile>out\char.bin</charfile>
          <mapfile>out\charMaps.s</mapfile>
          <palfile>out\charPals.s</palfile>
          <incfile>out\charInclude.h</incfile>
          <incprefix>../</incprefix>
        </setup>
        <scrl id="streamScroll" colorStream="horizontal">
          <file>gfx\streamTest.png</file>
        </scrl>
        <scrl id="SNKLogoStrip" colorStream="vertical">
          <file>gfx\SNK_logoStrip.png</file>
        </scrl>
        <scrl id="ffbg_a">
          <file>gfx\ffbg_a.png</file>
        </scrl>
        <scrl id="ffbg_b">
          <file>gfx\ffbg_b0.png</file>
          <auto1>gfx\ffbg_b1.png</auto1>
          <auto2>gfx\ffbg_b2.png</auto2>
          <auto3>gfx\ffbg_b3.png</auto3>
        </scrl>
        <pict id="ffbg_c">
          <file>gfx\ffbg_c.png</file>
        </pict>
        <pict id="terrypict">
          <file>gfx\terry_portrait.png</file>
          <flips>xyz</flips>
        </pict>
        <pict id="desert">
          <file>gfx\desert.png</file>
        </pict>
        <sprt id="bmary_spr">
          <file>gfx\bmary.png</file>
          <flips>xyz</flips>
          <!-- idle frames -->
          <!-- walking frames -->
          <frame>0,0:4,7</frame>
          <frame>4,0:4,7</frame>
          <frame>8,0:4,7</frame>
          <frame>12,0:4,7</frame>
          <frame>16,0:4,7</frame>
          <frame>20,0:4,7</frame>
          <frame>24,0:4,7</frame>
          <frame>28,0:4,7</frame>
          <frame>32,0:4,7</frame>
          <frame>36,0:4,7</frame>
          <frame>40,0:4,7</frame>
          <frame>44,0:4,7</frame>
          <frame>0,7:4,7</frame>
          <frame>4,7:4,7</frame>
          <frame>8,7:4,7</frame>
          <frame>12,7:4,7</frame>
          <frame>16,7:4,7</frame>
          <frame>20,7:4,7</frame>
          <frame>24,7:4,7</frame>
          <frame>28,7:4,7</frame>
        </sprt>
        <pict id="topleft">
          <file>gfx\topleft.png</file>
          <flips>xyz</flips>
        </pict>
        <pict id="pointer">
          <file>gfx\pointer.png</file>
        </pict>
        <pict id="dbgTags">
          <file>gfx\debugtags.png</file>
        </pict>
        <scrl id="wohd">
          <file>gfx\wohd.png</file>
        </scrl>
        <pict id="gradient">
          <file>gfx\colorbars.png</file>
        </pict>
        <pict id="tf4layers">
          <file>gfx\tf4layers.png</file>
        </pict>
      </chardata>
      <fixdata>
        <chardata>
          <setup fileType="fix">
            <charfile>out\fix.bin</charfile>
            <palfile>out\fixPals.s</palfile>
            <incfile>out\fixData.h</incfile>
          </setup>
          <import bank="0">
            <file>{{build}}\fix\systemFont.bin</file>
          </import>
          <fix bank="3" id="fix_sfz3font0">
            <file>gfx\fix\font0.png</file>
          </fix>
          <fix bank="3" id="fix_bars">
            <file>gfx\fix\bars.png</file>
          </fix>
          <fix bank="5" id="logo95">
            <file>gfx\fix\logo95.png</file>
          </fix>
          <fix bank="5" id="logo96">
            <file>gfx\fix\logo96.png</file>
          </fix>
          <fix bank="5" id="logo97">
            <file>gfx\fix\logo97.png</file>
          </fix>
          <fix bank="5" id="logo98">
            <file>gfx\fix\logo98.png</file>
          </fix>
        </chardata>
      </fixdata>
    </DAT>
  </gfx>
  <emulator>
    <raine>
      <exeFile>{{build}}\raine\raine.exe</exeFile>
      <config>
        <default>{{build}}\raine\config\default.cfg</default>
        <full>{{build}}\raine\config\fullscreen.cfg</full>
      </config>
    </raine>
    <mame>
      <exeFile>{{build}}\mame\mame64.exe</exeFile>
      <profile>
        <default>-window -skip_gameinfo neocdz</default>
        <full>-nowindow -skip_gameinfo neocdz</full>
        <nosound>-sound none -window -skip_gameinfo neocdz</nosound>
        <debug>-console -debug -window -skip_gameinfo -pluginspath {{build}}\mame\plugins -plugin ngdev neocdz</debug>
      </profile>
    </mame>
  </emulator>
  <compiler>
    <name>gcc</name>
    <version>2.95.2</version>
    <path>{{build}}\gcc\gcc-2.95.2</path>
    <includePath>{{neocore}}\src-lib\include</includePath>
    <libraryPath>{{build}}\lib</libraryPath>
    <crtPath>{{neocore}}\src-lib\crt</crtPath>
    <systemFile>
      <cd>{{neocore}}\src-lib\system\neocd.x</cd>
      <cartridge>{{neocore}}\src-lib\system\neocart.x</cartridge>
    </systemFile>
  </compiler>
</project>